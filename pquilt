import sys
import os.path

import quilt.cli.applied
import quilt.cli.push
import quilt.cli.top
import quilt.cli.series
import quilt.cli.pop
import quilt.cli.patchimport

from quilt.error import QuiltError

def usage():
    print "%s command [--help] ..." % (os.path.basename(sys.argv[0]))

def main():
    if not len(sys.argv) > 1:
        usage()
        sys.exit(1)

    cmd = sys.argv[1]
    args = sys.argv[2:]

    try:
        if cmd == "push":
            quilt.cli.push.parse(args)
        elif cmd == "pop":
            quilt.cli.pop.parse(args)
        elif cmd == "applied":
            quilt.cli.applied.parse(args)
        elif cmd == "top":
            quilt.cli.top.parse(args)
        elif cmd == "series":
            quilt.cli.series.parse(args)
        elif cmd == "import":
            quilt.cli.patchimport.parse(args)
        else:
            print "command %s not known." % cmd
            usage()
            sys.exit(2)
    except QuiltError, e:
        print e
        sys.exit(1)

if __name__ == "__main__":
        main()

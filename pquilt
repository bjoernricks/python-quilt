import sys
import os.path

from quilt.cli import QuiltCli

from quilt.error import QuiltError

def main():
    try:
        cli = QuiltCli()
        cli.run()
    except QuiltError as e:
        print(e)
        sys.exit(1)

if __name__ == "__main__":
        main()
